<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/QuestionNum_Collection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="当前题目数量：" />

        <TextView
            android:id="@+id/Question_Collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="考题"
            android:textSize="18sp">

            <requestFocus></requestFocus>
        </TextView>

        <RadioGroup
            android:id="@+id/radioGroup_Collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp">

            <RadioButton
                android:id="@+id/answerA_Collection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选项"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/answerB_Collection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选项"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/answerC_Collection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选项"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/answerD_Collection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选项"
                android:textSize="15sp" />
        </RadioGroup>

        <CheckBox
            android:id="@+id/c1_Collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选项"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/c2_Collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选项"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/c3_Collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选项"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/c4_Collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选项"
            android:textSize="15sp" />

        <!-- android:text="答案" -->
        <TextView
            android:id="@+id/text_answer_Collection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp" />

        <!-- android:text="解析" -->
        <TextView
            android:id="@+id/explaination_Collection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp" />


    </LinearLayout>


    <SeekBar
        android:id="@+id/test_seekbar_Collection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_answer_Collection"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-71dp"
        android:layout_marginBottom="71dp"
        android:progress="0" />

<!--    <ImageButton-->
<!--        android:id="@+id/btn_Collection"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_alignParentLeft="true"-->
<!--        android:layout_alignParentBottom="true"-->
<!--        android:src="@xml/ic_label_collection"-->
<!--        android:text="取消收藏"/>-->

    <ImageButton
        android:id="@+id/btn_answer_Collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:src="@xml/ic_label_answer"
        android:text="查看答案"/>

</RelativeLayout>